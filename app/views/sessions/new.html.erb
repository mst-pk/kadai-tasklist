<div>
    <h1>Log in</h1>
</div>

<div>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div>
            <%= f.label :email, "Email" %>
            <%= f.text_field :email %>
        </div>
        
        <div>
            <%= f.label :password, "Password" %>
            <%= f.text_field :password %>
        </div>
        <%= f.submit "Log in" %>
    <% end %>
    <%= link_to "Sign up", signup_path %>
</div>