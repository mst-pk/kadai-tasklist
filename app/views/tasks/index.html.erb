<h1>タスク一覧</h1>
<% if logged_in? %>
    <p><%= current_user.name %> がログイン中</p>
<% end %>
<ul>
     
    <% @tasks.each do |task| %>
        <% if current_user == task.user %>
            <li><%= link_to task.id, task %>: <%= task.content %>, <%= task.status %></li>
        <% end %>
    <% end %>
</ul>
<%= link_to "新規投稿", new_task_path %>
<%= link_to "Logout", logout_path, method: :delete %>
